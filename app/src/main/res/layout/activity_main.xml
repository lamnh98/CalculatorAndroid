<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="M"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/txtExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="1 + 1"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:background="#123456"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMC"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:background="@drawable/btn_normal_background"
                android:text="mc"
                android:textColor="#7F7F7F" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnMplus"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="m+" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnMminus"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="m-" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnMR"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="mr" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="#E04556"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:textColor="#E04556"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnMulti"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="x" />

            <Button
                android:textColor="#E04556"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="รท" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnBackspace"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="Backspace" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:textColor="#E04556"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:textColor="#7F7F7F"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:textColor="#E04556"
                android:background="@drawable/btn_normal_background"
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="86.25dp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="#345456"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"></LinearLayout>

</android.support.constraint.ConstraintLayout>